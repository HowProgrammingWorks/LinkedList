{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./TypeScript",
    "rootDir": "./TypeScript",
    "allowSyntheticDefaultImports": false,
    "isolatedModules": true,
    "pretty": true
  },
  "include": ["TypeScript/*.ts"],
  "exclude": ["node_modules"]
}
